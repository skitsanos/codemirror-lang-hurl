@top Program { expression* }

@skip { space | LineComment }

expression {
  Variable |
  String |
  Boolean |
  Number |
  Protocol |
  HttpVerb
}

@tokens {
  Variable { "{{" ![\n]* "}}" }

  String { '"' (!["\\] | "\\" _)* '"' }

  Number { @digit+ }

  Boolean { "true" | "false" }

  LineComment { "#" ![\n]* }

  space { $[ \t\n\r]+ }

  Protocol { "HTTP" }

  HttpVerb { "CONNECT" | "DELETE" | "GET" | "HEAD" | "OPTIONS" | "PATCH" | "POST" | "PUT" | "TRACE" }
}

@detectDelim
